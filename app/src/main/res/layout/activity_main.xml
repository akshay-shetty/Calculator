<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/buttonSeven"
            android:enabled="false"
            android:gravity="bottom"
            android:lines="2"
            android:maxLines="2"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonSeven"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_above="@id/buttonFour"
            android:text="7"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonEight"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_above="@id/buttonFive"
            android:layout_toRightOf="@id/buttonSeven"
            android:text="8"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonNine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_above="@id/buttonSix"
            android:layout_toRightOf="@id/buttonEight"
            android:text="9"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonFour"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_above="@id/buttonOne"
            android:text="4"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonFive"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignRight="@id/buttonEight"
            android:layout_above="@id/buttonTwo"
            android:text="5"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonSix"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignRight="@id/buttonNine"
            android:layout_above="@id/buttonThree"
            android:text="6"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonOne"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_above="@id/buttonDot"
            android:text="1"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonTwo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignRight="@id/buttonEight"
            android:layout_above="@id/buttonZero"
            android:text="2"
            android:textSize="20sp" />
        <Button
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonThree"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignRight="@id/buttonNine"
            android:layout_above="@id/buttonClear"
            android:text="3"
            android:textSize="20sp" />
        <Button
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonDot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:text="."
            android:textSize="20sp" />
        <Button
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="#E16963"
            android:id="@+id/buttonZero"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignRight="@id/buttonEight"
            android:text="0"
            android:textSize="20sp" />
        <Button
            android:id="@+id/buttonClear"

            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="#E16963"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:text="C"
            android:layout_alignRight="@id/buttonNine"
            android:textSize="20sp" />
        <Button
            android:id="@+id/buttonDivide"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="73sp"
            android:layout_height="73sp"
            android:layout_alignTop="@id/buttonNine"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/buttonMultiply"
            android:layout_toRightOf="@+id/buttonNine"
            android:background="#5F73F2"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <Button
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="#5F73F2"
            android:id="@+id/buttonMultiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="73sp"
            android:layout_height="73sp"
            android:layout_above="@id/buttonSubtract"
            android:layout_toRightOf="@id/buttonSix"
            android:text="*"
            android:textSize="20sp" />
        <Button
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="#5F73F2"
            android:id="@+id/buttonSubtract"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="73sp"
            android:layout_height="73sp"
            android:layout_above="@id/buttonAdd"
            android:layout_toRightOf="@id/buttonThree"
            android:text="-"
            android:textSize="20sp" />
        <Button
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="#5F73F2"
            android:id="@+id/buttonAdd"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="73sp"
            android:layout_height="73sp"
            android:layout_above="@id/buttonEqual"
            android:layout_toRightOf="@id/buttonThree"
            android:text="+"
            android:textSize="20sp" />
        <Button
            android:id="@+id/buttonEqual"

            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100sp"
            android:layout_height="73sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="="

            android:textSize="20sp"
            android:layout_toRightOf="@id/buttonClear" />
    </RelativeLayout>
</layout>